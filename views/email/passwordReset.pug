extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? Submit a PATCH request with your new password to: #{url}. If you didn't forgot your password, ignore this email.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password 